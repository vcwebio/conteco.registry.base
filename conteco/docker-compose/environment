#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="registry.base"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_registry"
export CONTECO_DC_GLOBAL_BOOTSTACKS="conteco_dc_registry"
export CONTECO_DC_GLOBAL_RUNSTACKS=""
export CONTECO_DC_GLOBAL_VOLUME_LIST="${DOLLAR}{CONTECO_STACKPREFIX}_registry_volume"
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_REGISTRY_ENVIRONMENT,$CONTECO_DC_REGISTRY_COMMAND,$CONTECO_DC_REGISTRY_VOLUMES,$CONTECO_DC_REGISTRY_NETWORKS,$CONTECO_DC_REGISTRY_DEPLOY_MODE,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_REGISTRY_ENVIRONMENT=
export CONTECO_DC_REGISTRY_COMMAND=
export CONTECO_DC_REGISTRY_VOLUMES="${DOLLAR}{CONTECO_STACKPREFIX}_registry_volume:/var/lib/registry"
export CONTECO_DC_REGISTRY_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay"
export CONTECO_DC_REGISTRY_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_STACKPREFIX}_registry_volume: { external: true }"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS registry.base
export CONTECO_DC_REGISTRY_PORTS="5000:5000"
export CONTECO_DC_REGISTRY_DEPLOY_RESOURCES_LIMITS_MEMORY="384m"
export CONTECO_DC_REGISTRY_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS registry.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
