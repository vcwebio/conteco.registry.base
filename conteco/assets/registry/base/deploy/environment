#!/usr/bin/env bash

# this file contains the default settings
# scaling parameters are applied after loading defaults

# GLOBAL REPLACEMENTS
DOLLAR='$'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_REGISTRY_ENVIRONMENT,$CONTECO_DC_REGISTRY_COMMAND,$CONTECO_DC_REGISTRY_VOLUMES'
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_REGISTRY_ENVIRONMENT=
export CONTECO_DC_REGISTRY_COMMAND=
export CONTECO_DC_REGISTRY_VOLUMES="${DOLLAR}{CONTECO_DC_REGISTRY_VOLUME_NAME}:/var/lib/registry"

# START VARIABLES registry.base
export CONTECO_DC_REGISTRY_PORTS="5000:5000"
export CONTECO_DC_REGISTRY_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_REGISTRY_DEPLOY=
export CONTECO_DC_REGISTRY_VOLUME_NAME="${CONTECO_ECOSYSTEM}_${CONTECO_TYPE}_volume"
# END VARIABLES registry.base

# START GLOBAL VARIABLES
export CONTECO_DC_GLOBAL_VOLUMES="${CONTECO_DC_REGISTRY_VOLUME_NAME}: {}"
export CONTECO_DC_GLOBAL_NETWORKS="${CONTECO_DC_REGISTRY_NETWORKS}: { external: true }"
# END GLOBAL VARIABLES
